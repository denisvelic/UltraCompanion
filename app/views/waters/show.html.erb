<div class = "map-live">
  <div style="width: 100%; height: 92vh;"
    data-controller="mergemaps"
    data-mergemaps-racepoints-value="<%= @markers %>"
    data-mergemaps-waterpoints-value="<%= @water_markers.to_json %>"
    data-mergemaps-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<div data-controller="play">
  <div class="menu-map-top">
    <div style ="margin-top: 7px;">
      <%=image_tag("icons/clock.svg")%>
    </div>
    <div>
      <p><div data-play-target="timer">00:00</div></p>
      <p style ="color:#245611;margin-top: -3px;">Temps passé</p>
    </div>
    <div style ="margin-top: 7px;">
      <%=image_tag("icons/bike.svg")%>
    </div>
    <div>
      <p>0 km</p>
      <p style ="color:#245611; margin-top: -3px;">Parcouru</p>
    </div>
  </div>

  <div class="menu-map-bottom">

      <h5><% if  @race.started_at == nil %>
            <%= link_to "" do %>
            <% end %>

        <%# <i class="fa-regular fa-square-check"></i> %>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end%></h5>
    <div class="menu-map-bottom-direction">
      <h5><% if  @race.started_at == nil %>
        <%= link_to "" do %>
        <%= image_tag("icons/direction.svg",  size: "40x40") %>
        <% end %>
        <%# <i class="fa-regular fa-square-check"></i> %>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end%></h5>
      <p>Localisation</p>
    </div>
    <div class="menu-map-bottom-play" data-action="click->play#toggle">
        <%= image_tag("play.svg",  size: "40x40", data: {action: "click->play#start", play_target: "icon"}, class: "play-button") %>
        <%= image_tag("pause.svg",  size: "40x40", data: {action: "click->play#start", play_target: "pause"}, class: "pause-button d-none") %>

      <p><div data-play-target="switchstart">Démarrer</div></p>
      <p><div data-play-target="switchpause" class="d-none">Pause</div></p>
    </div>
  </div>

  <div class="menu-map-bottom-progression">
            <%= link_to race_progressions_path(@race) do %>
            <%= image_tag("icons/person-biking.svg",  size: "40x40") %>
            <% end %>
      <p>Progression</p>
  </div>
</div>
</div>
