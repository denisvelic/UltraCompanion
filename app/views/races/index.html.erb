<div class="container-index">

  <div class="profil">
    <div class="avatar"></div>
    <div class="salut"><p>Salut,<br><strong>Pierre</strong></p></div>
  </div>

  <div class="big-card">
    <% if current_user.races.last.status == "undone" %>
      <h3>Ma prochaine course</h3>
       <%= link_to race_path(id: current_user.races.last.id) do %>
        <div class="card-course">
            <div class="card-text">
              <p><%= current_user.races.last.name %></p>
              <p><em><%= current_user.races.last.date %></em></p>
            </div>
        </div>
        <% end %>
    <% else %>
      <div class="ajouter">
        <h3>Ajouter une course</h3>
          <%= link_to new_race_path do %>
            <div class="card-photo-vide">
              <i class="fas fa-plus-circle"></i>
            </div>
          <% end %>
      </div>
    <% end %>


  <%# Carrousel des courses déjà réalisées %>
<h3>Mes précédentes courses</h3>

  <div class="wrapper">
    <nav class="lil-nav">
      <div class="gallery">

        <div class="card-carousel">
          <div class="card-text">
            <p> <%=  %> GM Pays Basque</p>
            <p><em>St Jean de Luz, France</em></p>
          </div>
        </div>

        <div class="card-carousel2">
          <div class="card-text">
            <p>GM Breizh</p>
            <p><em>Plogoff, France</em></p>
          </div>
        </div>

        <div class="card-carousel3">
          <div class="card-text">
            <p>GM Mont Blanc</p>
            <p><em>Chamonix, France</em></p>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>
