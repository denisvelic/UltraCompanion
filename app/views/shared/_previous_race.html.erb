  <%# la page de présentation de chacune des courses réalisées %>
  <%# Afficher la carte du parcours - Automatiser en présentant la bonne page%>
  <div
    style="width: 100%; height: 300px; box-shadow: 0 4px 2px -2px gray;"
    data-controller="map"
    data-map-markers-value="<%= @markers %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div>
    <h3><%= @race.name%></h3>
  </div>

  <div class="white-card">

    <div>
      <%=image_tag("icons/bike.svg")%>
      <p style="margin-top: 3px"><strong><%= @race.distance.to_i %> km</strong></p>
    </div>
    <div>
      <%=image_tag("icons/denivele.svg")%>
      <p style="margin-top: 3px"><strong><%= @gains %> m</strong></p>
    </div>
    <div>
      <%=image_tag("icons/clock.svg")%>
      <p style="margin-top: 3px"><strong><%= @race.time %> h</strong></p>
    </div>
  </div>

  <div class="white-card-companion">
    <div style="margin-left: 10px;" >
      <div>
        <h5><strong>Profil de la course</strong></h5>
      </div >
      <div>
      <%= area_chart @elevations.map.with_index{|idx, ele| [ele, idx]}, min: 0, xmin: 0, xmax: 8000, points: false, colors: ["#245611", "#666"], width: "auto", height: "25vh" %>
      </div>
    </div>
  </div>
