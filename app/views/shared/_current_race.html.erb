<%# Afficher la carte du parcours %>
<div class="wrapper-current-course">
  <div class="display_map">
    <div
      style="width: 100%; height: 300px; box-shadow: 0 4px 2px -2px gray;"
      data-controller="map"
      data-map-markers-value="<%= @markers %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div>
    <h3><%= @race.name%></h3>
  </div>

  <div class="race-summary">
    <div>
      <%=image_tag("icons/bike.svg")%> <p style="margin-top: 3px; font-size: 0.8rem">
    </div>
    <div>
      <strong> 318 km</strong></p>
    </div>
    <div>
      <%=image_tag("icons/denivele.svg")%><p style="margin-top: 3px; font-size: 0.8rem">
    </div>
    <div>
      <strong>1257 m</strong></p>
    </div>
  </div>


    <%# Profil de la course %>
    <div class="white-card-companion">
      <div style="margin-left: 10px;" >
        <div>
          <h5><strong>Profil de la course</strong></h5>
        </div >
        <div>
          <%= area_chart @elevations.map.with_index{|idx, ele| [ele, idx]}, min: 0, xmin: 0, xmax: 6500, points: false, colors: ["#245611", "#666"], width: "auto", height: "25vh" %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= link_to "DÃ©marrer la navigation", race_waters_path(@race), class: "principal-btn" %>
  </div>
</div>
